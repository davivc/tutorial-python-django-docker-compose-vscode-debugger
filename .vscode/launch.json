{
    "configurations": [
        {
            "name": "Attach (Remote Django App)",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "127.0.0.1",
                "port": 5678
            },
            "pathMappings": [
                {
                  "localRoot": "${workspaceFolder}/example",
                  "remoteRoot": "/usr/src/app"
                }
              ]
        }
    ]
}